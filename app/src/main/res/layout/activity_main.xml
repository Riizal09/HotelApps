<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <ImageView
            android:src="@drawable/ic_launcher_background"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:id="@+id/imageView1"
            android:background="#999">
        </ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#a00"
        android:layout_gravity="top|right"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$74"
            android:textColor="#fff"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Per Night"
            android:textSize="13sp"
            android:textColor="#fff">
        </TextView>
    </LinearLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laut Biru Resort Hotel"
                android:textSize="24sp"
                android:gravity="center">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:text="Cocok dijadikan sebagai lokasi bemmalam saat kamu tengah berpetualang di pantai Pangandaran. Hotel pantai yang satu ini bisa ditempuh dengan jalan kaki dari pantai serta memiliki lokasi yang strategis. Laut Biru Resort Hotel juga dilengkapi dengan mini waterboom yang bisa dijadikan sebagai lokasi anak bermain air. Terdapat beberapa tipe kamar yang bisa disewa sesuai dengan budget yang dimiliki. Fasilitas yang tersedia juga lengkap, sehingga bisa memaksimalkan acar bermalam kamu dengan keluarga.">
            </TextView>

        </LinearLayout>

    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textColor="#ffffff"
        android:text="Book Now!!!">
    </Button>


</LinearLayout>




